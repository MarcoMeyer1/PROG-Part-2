@model IEnumerable<Part_2.Models.ProductViewModel>

@{
    ViewData["Title"] = "All Products";
}

<div class="main-content">
    <h1>All Products</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Production Date</th>
                <th>Price</th>
                <th>Farmer</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Category</td>
                    <td>@item.ProductionDate.ToShortDateString()</td>
                    <td>@item.Price.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("en-ZA"))</td>
                    <td>
                        <a asp-action="Details" asp-controller="Profile" asp-route-id="@item.FarmerId">@item.FarmerName</a>
                    </td>
                    <td>
                        <form asp-action="DeleteProduct" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
