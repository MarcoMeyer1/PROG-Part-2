@model Part_2.Models.UserProfileViewModel

@{
    ViewData["Title"] = "Farmer Details";
}

<div class="main-content">
    <h1>@Model.Farmer.Name's Profile</h1>

    <div>
        <h4>Farmer Profile</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Farmer.Name</dd>

            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Farmer.Email</dd>

            <dt class="col-sm-2">Role</dt>
            <dd class="col-sm-10">@Model.Farmer.Role</dd>

            <dt class="col-sm-2">About</dt>
            <dd class="col-sm-10">@Model.Profile.About</dd>

            <dt class="col-sm-2">Age</dt>
            <dd class="col-sm-10">@Model.Profile.Age</dd>

            <dt class="col-sm-2">Years of Service</dt>
            <dd class="col-sm-10">@Model.Profile.YearsOfService</dd>
        </dl>
    </div>

    <h4>Products</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Production Date</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td>@product.ProductionDate.ToShortDateString()</td>
                    <td>@product.Price.ToString("C", new System.Globalization.CultureInfo("af-ZA"))</td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back to Home</a>
    </div>
</div>
