        background-color: #2c3e50;
    }

    .navbar-brand, .nav-link {
        color: #fff !important;
    }

        .nav-link:hover {
            color: #d4edda !important;
        }

    footer {
        background-color: #2c3e50;
        color: white;
        padding: 10px 0;
    }

        footer a {
            color: #d4edda;
        }

