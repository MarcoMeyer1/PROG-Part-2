@model IEnumerable<Part_2.Models.ProductViewModel>

@{
    ViewData["Title"] = "Search Products";
}

<div class="main-content">
    <h1>Search Products</h1>

    <form asp-action="Search" method="post">
        <div class="form-group">
            <input type="text" name="query" class="form-control" placeholder="Search for products..." />
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <hr />

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Production Date</th>
                <th>Price</th>
                <th>Farmer</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Category</td>
                    <td>@item.ProductionDate.ToShortDateString()</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                        <a asp-action="FarmerDetails" asp-route-id="@item.FarmerId">@item.FarmerName</a>
                    </td>
                    <td>
                        <a asp-action="ProductDetails" asp-route-id="@item.Id" class="btn btn-info">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
