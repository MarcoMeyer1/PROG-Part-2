@model Part_2.Models.ProductViewModel

@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>
        <dt class="col-sm-2">Production Date</dt>
        <dd class="col-sm-10">@Model.ProductionDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C", new System.Globalization.CultureInfo("af-ZA"))</dd>
        <dt class="col-sm-2">Farmer</dt>
        <dd class="col-sm-10">
            <a asp-action="FarmerDetails" asp-route-id="@Model.FarmerId">@ViewBag.Farmer</a>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
